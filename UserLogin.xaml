<Window x:Class="BlackJack.UserLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlackJack"
        mc:Ignorable="d"
        Title="UserLogin" Height="250" Width="400">
    <Grid>
        <TextBlock Text="Username" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 -50 0 0" FontWeight="Bold" FontSize="20"></TextBlock>
        <TextBox x:Name="txtUsername" Width="200" Height="20"></TextBox>
        <Button x:Name="btnLogin" Content="Login" Width="100" Height="20" Margin="0 50 0 0" Click="btnLogin_Click"></Button>
    </Grid>
</Window>
