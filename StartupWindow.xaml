<Window x:Class="BlackJack.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlackJack"
        mc:Ignorable="d"
        Title="BlackJack Start" Height="300" Width="400">
    <Grid>
        <StackPanel>
            <Label x:Name="loginInfo" Content="You're not logged in" HorizontalAlignment="Left" Margin="25,20,0,0" VerticalAlignment="Top" FontSize="16"/>
            <Button x:Name="btnLogin" Content="Login" Width="100" HorizontalAlignment="Left" Margin="25, 10, 0, 0" Click="btnLogin_Click"/>
            <Button x:Name="btnPlay" Content="PlayGame" Width="100" HorizontalAlignment="Left" Margin="25, 10, 0, 0" IsEnabled="False" Click="btnPlay_Click"/>
            <Button x:Name="btnStats" Content="See Stats" Width="100" HorizontalAlignment="Left" Margin="25, 10, 0, 0" Click="btnStats_Click" />

        </StackPanel>
    </Grid>
</Window>
